@code 
{
	[Inject] NavigationManager NavManager { get; set; }

	private const string AdminIndexPageUri = "/admin";
	private static string s_adminCategoriesPageUri = $"{AdminIndexPageUri}/categories";
	private static string s_adminPostsPageUri = $"{AdminIndexPageUri}/posts";

    //TODO: Refactor, this is copy and paste.
	private bool IsPageActive(string uriToCheck)
    {
        //skip the first parts of the URI http:// ..etc.
        string[] uriSplit = NavManager.Uri.Split("/", StringSplitOptions.None).Skip(3).ToArray();

        if (uriToCheck == AdminIndexPageUri)
        {
            if (uriSplit.Last() == "admin")
                return true;
        }
        else
        {
            //This is for checking nested pages, e.g the blog, iterate through the parts of the uri to find a match
            //TODO: Regex with lookup values?
            var pageParts = uriToCheck.Split("/").Skip(2).ToArray();

            foreach (var currentUriPart in uriSplit)
            {
                foreach (var pagePart in pageParts)
                {
                    if (pagePart == currentUriPart)
                        return true;
                }
            }
        }
        return false;
    }
}

