@using Core.Models
@using Core

<div class="card shadow mb-2">
    <img src="@($"{APIEndpoints.ServerBaseUrl}/{Category.ThumbnailPath}")" class="card-img-top" alt="Category thumbnail image" />
    <div class="card-body">
        <h3 class="card-title">@Category.Name</h3>
        <p class="card-text">@Category.Description</p>
    </div>

    <a href="@($"/blog/{Category.CategoryId}/{Category.Name.ConvertTitleToURL().ToLowerInvariant()}")" class="btn btn-primary stretched-link md-f-size-1-5">
        <i class="fas fa-mail-bulk"></i> View posts
    </a>
</div>

@code {

    //Passed in "model"
    [Parameter] public Category Category { get; set; }

}